{
  "name": "e2e-testing-framework",
  "version": "1.0.0",
  "description": "Integrated Mobile Testing Framework with Playwright and Appium",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:android": "npx playwright test --project=Android",
    "test:ios": "npx playwright test --project=iOS",
    "test:web": "npx playwright test --project=Web",
    "test:mobile": "npx playwright test --grep=@mobile",
    "appium:start": "appium",
    "appium:stop": "pkill -f appium",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "report": "allure generate allure-results --clean -o allure-report",
    "report:open": "allure open allure-report"
  },
  "keywords": [
    "mobile testing",
    "playwright",
    "appium",
    "automation"
  ],
  "author": "Amr",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.49.1",
    "appium": "^2.13.1",
    "dotenv": "^16.4.7",
    "playwright": "^1.49.1",
    "webdriverio": "^9.x.x"
  },
  "devDependencies": {
    "@babel/core": "^7.x.x",
    "@babel/preset-env": "^7.x.x",
    "allure-commandline": "^2.x.x",
    "allure-playwright": "^3.x.x",
    "eslint": "^9.x.x",
    "eslint-config-standard": "^17.x.x"
  }
}
